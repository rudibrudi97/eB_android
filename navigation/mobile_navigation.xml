    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.vermittlung.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_jobs" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.vermittlung.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_gespeichert" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.vermittlung.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
